{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-console": "off",
    "no-var": "error",
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "semi": "off",
    "react/prop-types": 0,
    "no-constant-condition": "warn",
    "react/display-name": 0
  }
}
